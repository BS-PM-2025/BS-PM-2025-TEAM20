pipeline {
    agent any

    environment {
        // מבטיח שהסרגל ~/.local/bin יתווסף ל-PATH כדי שה-pip --user יהיה זמין
        PATH = "${HOME}/.local/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                // שולף את הקוד מה־SCM שהוגדר ב‑Job
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    # מתקין pip ו־virtualenv (אם נדרש) למשתמש ולא לצורך הרצת root
                    pip3 install --user --upgrade pip

                    # מתקין את כל התלויות מקובץ requirements.txt לתוך ~/.local
                    pip3 install --user -r requirements.txt
                '''
            }
        }

        stage('Run Migrations') {
            steps {
                // מריץ מיגרציות בעזרת python3 מתוך המערכת
                sh 'python3 manage.py migrate'
            }
        }

        stage('Run Tests') {
            steps {
                // מריץ את כל הבדיקות
                sh 'python3 manage.py test'
            }
        }
    }

    post {
        success {
            echo '🎉 כל השלבים עברו בהצלחה!'
        }
        failure {
            echo '❌ יש שגיאה – בדוק את לוג Jenkins.'
        }
    }
}
