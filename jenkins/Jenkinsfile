pipeline {
    agent any

    environment {
        // הגדרת משתני סביבה עבור חיבור בסיס הנתונים
        DB_NAME = 'test_db'
        DB_USER = 'jenkins_user'
        DB_PASS = 'jenkins_pass'
        DB_HOST = 'localhost'
        DB_PORT = '1433'
        // אם יש צורך, אפשר להוסיף משתנים נוספים
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code from Git...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'python3 -m pip install --upgrade pip'
                sh 'python3 -m pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Django tests and generating JUnit XML report...'
                // יצירת תיקיית reports אם לא קיימת
                sh 'mkdir -p reports'
                // הרצת בדיקות עם הפקת דוח JUnit XML
                // אם משתמשים בpytest: sh 'pytest --junitxml=reports/results.xml'
                // כאן דוגמה עם django-xmlrunner (יש להתקין אותו בrequirements)
                sh 'python3 manage.py test --testrunner=xmlrunner.extra.djangotestrunner.XMLTestRunner --output-dir=reports'
            }
            post {
                always {
                    echo 'Publishing JUnit test reports...'
                    junit 'reports/*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // sh './deploy_script.sh'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Build and tests succeeded.'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}
