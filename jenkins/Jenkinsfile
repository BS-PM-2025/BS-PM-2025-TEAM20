pipeline {
    agent any

    environment {
        // הגדרת משתני סביבה עבור חיבור בסיס הנתונים
        DB_NAME = 'test_db'
        DB_USER = 'jenkins_user'
        DB_PASS = 'jenkins_pass'
        DB_HOST = 'localhost'
        DB_PORT = '1433'
        // אם יש צורך, אפשר להוסיף משתנים נוספים
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code from Git...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // שדרוג pip והתקנת כל התלויות
                sh 'python3 -m pip install --upgrade pip'
                sh 'python3 -m pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Django unit and integration tests...'
                // כאן ניתן להוסיף יצירת בסיס נתונים זמני או ניקוי אם צריך (למשל שורת shell להרצת סקריפט DB)
                sh 'python3 manage.py test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // כאן יש להוסיף סקריפט פריסה אמיתי, למשל:
                // sh './deploy_script.sh'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Build and tests succeeded.'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}
