pipeline {
    agent any

    environment {
        // מבטיח שהסרגל ~/.local/bin יתווסף ל-PATH כדי שה-pip --user יהיה זמין
        PATH = "${HOME}/.local/bin:${env.PATH}"
        // משתמש בהגדרות בדיקה עם SQLite ללא התקנות נוספות

    DJANGO_SETTINGS_MODULE = "djangoProject11.settings"


    }

    stages {
        stage('Checkout') {
            steps {
                // שולף את הקוד מה־SCM שהוגדר ב‑Job
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    # מתקין pip למשתמש ולא דורש הרשאות root
                    pip3 install --user --upgrade pip

                    # מתקין את כל התלויות מקובץ requirements.txt לתוך ~/.local
                    pip3 install --user -r requirements.txt
                '''
            }
        }

        stage('Run Migrations') {
            steps {
                // מריץ מיגרציות תוך שימוש בהגדרות הבדיקה (SQLite in-memory)
                sh 'python3 manage.py migrate'
            }
        }

        stage('Run Tests') {
            steps {
                // מריץ את כל הבדיקות, משתמש ב-DJANGO_SETTINGS_MODULE שהוגדר
                sh 'python3 manage.py test'
            }
        }
    }

    post {
        success {
            echo '🎉 כל השלבים עברו בהצלחה!'
        }
        failure {
            echo '❌ יש שגיאה – בדוק את לוג Jenkins.'
        }
    }
}
