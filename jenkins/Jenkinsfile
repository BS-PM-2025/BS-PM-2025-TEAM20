pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                // כאן תוכל להוסיף פקודות בנייה אם צריך, לדוגמה:
                // sh 'pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                echo 'Running Django tests...'
                sh 'python manage.py test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // כאן תוכל להוסיף שלב דיפלוי, למשל:
                // sh './deploy_script.sh'
            }
        }
    }
}
