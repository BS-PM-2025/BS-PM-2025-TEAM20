pipeline {
    agent any

    environment {
        DB_NAME = 'test_db'
        DB_USER = 'jenkins_user'
        DB_PASS = 'jenkins_pass'
        DB_HOST = 'localhost'
        DB_PORT = '1433'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code from Git...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    def start = System.currentTimeMillis()
                    echo 'Building the project...'
                    sh 'python3 -m pip install --upgrade pip'
                    sh 'python3 -m pip install -r requirements.txt'
                    def duration = (System.currentTimeMillis() - start) / 1000
                    echo "Build stage took ${duration} seconds"
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running Django unit and integration tests...'
                sh 'python3 manage.py test --junitxml=reports/test-results.xml'
            }
            post {
                always {
                    junit 'reports/test-results.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // sh './deploy_script.sh'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Build and tests succeeded.'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}
