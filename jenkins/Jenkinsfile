pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                // כאן תוכל להוסיף פקודות כמו: sh 'mvn clean install' או npm install וכו'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // כאן תוכל להריץ פקודות בדיקה כמו: sh 'npm test' או pytest וכו'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // שלב הדיפלוי שלך (אם יש)
            }
        }
    }
}
